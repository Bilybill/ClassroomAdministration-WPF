<Window x:Class="ClassroomAdministration_WPF.WindowIndex"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowIndex" Height="468" Width="816.05"
        xmlns:ext="clr-namespace:SilverlightApplicationGridBorderSample"
        >
    <Grid Loaded="Grid_Loaded_1" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <DatePicker Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14" Height="25" Width="118" HorizontalAlignment="Left"/>
        <Grid x:Name="GridSchdeuleSmall" Margin="10,80,10,10"
               ext:GridHelper.ShowBorder="True" MouseDown="Grid_MouseDown_1" Background="#00000000">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Column="1" Fill="#FFADADFF" Grid.RowSpan="2"/>
            <Rectangle Grid.Column="2" Fill="#FFE9ADFF" Grid.RowSpan="2" Grid.Row="2"/>
            <Rectangle Grid.Column="3" Fill="#FFBCFFAD" Grid.RowSpan="3" Grid.Row="2"/>
            <Rectangle Grid.Column="3" Fill="#FFBCFFAD" Grid.RowSpan="4" Grid.Row="6" Margin="0"/>
            <Rectangle Grid.Column="6" Fill="#FFE9ADFF" Grid.Row="13" Margin="0"/>
            
            <Rectangle x:Name="RectangleChosonClass" Grid.Column="3" Grid.Row="7" Margin="0" Stroke="#7F1700FF" StrokeThickness="2" Fill="#330000FF"/>
        </Grid>
        <Label Content="第1周" Height="25" Margin="133,10,10,0" VerticalAlignment="Top" FontSize="14" HorizontalContentAlignment="Center" Padding="0" VerticalContentAlignment="Center"/>
        <Rectangle Grid.Column="1" Margin="0" Fill="#FF99B9FF"/>

    </Grid>
</Window>
