<Window x:Class="ClassroomAdministration_WPF.WindowRent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="课程信息" Height="300" Width="300" Loaded="Window_Loaded_1" WindowStartupLocation="CenterScreen" PreviewKeyDown="Window_PreviewKeyDown_1" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True">
    <Grid Background="Transparent">
        <Border x:Name="BorderBackground" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="300" 
                 MouseLeftButtonDown="Border_MouseLeftButtonDown_1" 
                 CornerRadius="6" BorderBrush="#DFFFFFFF" BorderThickness="0.666" Loaded="BorderBackground_Loaded" >
            <Border.Background>
                <ImageBrush ImageSource="Resources/rentback.jpg"/>
            </Border.Background>
        </Border>
        <Border x:Name="CloseBorder" BorderBrush="White" BorderThickness="0" HorizontalAlignment="Right" Height="30" Margin="270,-2,0,0" VerticalAlignment="Top" Width="30" MouseEnter="CloseBorder_MouseEnter_1" Background="#00000000" MouseLeave="CloseBorder_MouseLeave" MouseDown="CloseBorder_MouseDown" MouseUp="CloseBorder_MouseUp" CornerRadius="0,6,0,0">
            <Label x:Name="CloseLabel" Content="x" Foreground="#FFFFFFFF" RenderTransformOrigin="1.026,0.284" Margin="4,0,0.333,0" FontSize="16"/>
        </Border>
        <StackPanel Margin="0,28,0,0">
        <Label x:Name="TBinfo" Margin="0"  Content="数学" VerticalAlignment="Top" FontSize="24" Padding="24,16,24,10" Foreground="White"/>
        <Label x:Name="TBhost"  Content="申请人: Admin" Margin="0" FontSize="14" Padding="36,5,24,5" Foreground="White"/>
        <Label x:Name="TBrentTime"  Content="上课时间" Margin="0" FontSize="14" Padding="36,5,24,5" Foreground="White"/>
        <Label x:Name="TBclassroom"  Content="教室: 一教101" Margin="0" FontSize="14" Padding="36,5,24,5" MouseDown="TBclassroom_MouseDown" MouseEnter="TBclassroom_MouseEnter" MouseLeave="TBclassroom_MouseLeave" Foreground="White"/>
        <Label x:Name="TBChoose"  Content="加入我的课程表" Margin="0" FontSize="14" Padding="36,5,24,5" MouseEnter="TBclassroom_MouseEnter" MouseLeave="TBclassroom_MouseLeave" MouseDown="TBChoose_MouseDown" Foreground="White"/>
        <Label x:Name="TBexit"  Content="取消" Margin="0" FontSize="14" Padding="36,5,24,5" MouseEnter="TBclassroom_MouseEnter" MouseLeave="TBclassroom_MouseLeave" MouseDown="TBexit_MouseDown" Foreground="White"/>

    </StackPanel>
    </Grid>
</Window>
